<resources>

    <style name="App_Application_Theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#1D2125</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:colorBackground">#777777</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:editTextColor">#ffffff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!--//-->

    <style name="App_Registration_Theme" parent="App_Application_Theme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <!--//-->

    <style name="CustomProgressBar" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:color">#82bc00</item>
        <item name="android:indeterminate">true</item>
        <item name="android:duration">5</item>
    </style>

    <!--//-->

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#ffffff</item>
    </style>

    <!--//-->

    <style name="App_HomePlanPreview_Theme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#1D2125</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:colorBackground">#777777</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:editTextColor">#ffffff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--//-->

    <style name="App_DialogFragment_Theme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">#1D2125</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:colorBackground">#777777</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#ffffff</item>
        <item name="android:editTextColor">#ffffff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorSurface">#353535</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogText</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="background">@drawable/ic_popup_background</item>
        <item name="android:windowBackground">@drawable/ic_popup_background</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MaterialAlertDialogText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--//-->

    <style name="MaterialTextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
    </style>

    <!--//-->

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/ThemeMaterialCalendarButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/ThemeMaterialCalendarButton</item>
        <item name="materialButtonStyle">@style/ThemeMaterialCalendarTextButton</item>
        <item name="android:textColor">#000000</item>
<!--        <item name="android:textAlignment">center</item>-->
        <item name="colorAccent">#39444E</item>
        <item name="materialCalendarHeaderLayout">@style/ThemeMaterialCalendarTextButtonHeaderSelection</item>
    </style>

    <style name="ThemeMaterialCalendarButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorLightBlue</item>
    </style>



    <style name="ThemeMaterialCalendarTextButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">#898989</item>
        <item name="iconTint">@color/colorBlack</item>
    </style>

    <style name="ThemeMaterialCalendarTextButtonHeaderSelection" parent="Widget.MaterialComponents.MaterialCalendar.HeaderSelection">
        <item name="android:background">@color/colorBlack</item>
        <item name="iconTint">@color/colorBlack</item>
    </style>

    <style name="BaseText" parent="@android:style/TextAppearance.Large">
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#AA7755</item>
    </style>
    <!--//-->
</resources>