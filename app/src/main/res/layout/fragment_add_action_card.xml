<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_shape_rectangle_card">

        <ImageView
            android:id="@+id/actionIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_action_rowing"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/actioncloseButtonIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_actionname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Action Name"
            app:layout_constraintBottom_toBottomOf="@+id/actionIcon"
            app:layout_constraintEnd_toStartOf="@+id/actioncloseButtonIcon"
            app:layout_constraintStart_toEndOf="@+id/actionIcon"
            app:layout_constraintTop_toTopOf="@+id/actionIcon" />

        <RelativeLayout
            android:id="@+id/rl_add_action_assignee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_event_details_contact_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_actionname">
            <ImageView
                android:id="@+id/img_add_action_assignee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_event_details_contact_not_confirmed"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/txt_add_action_assignee_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_toRightOf="@id/img_add_action_assignee"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"/>
            <ImageView
                android:id="@+id/img_add_action_assignee_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_event_details_settings"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/txt_add_action_assignee_name"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_add_action_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/rl_add_action_assignee">
            <ImageView
                android:id="@+id/img_add_action_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_cost_icon"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/txt_add_action_cost_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:layout_toRightOf="@id/img_add_action_cost"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"/>
            <TextView
                android:id="@+id/txt_add_action_cost_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>