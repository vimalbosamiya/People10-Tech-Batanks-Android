<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addGuestsBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/addGuestBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_guests_backround"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/textViewAddGuests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/add_guests"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/addGuestsDivider1"/>

        <ImageView
            android:id="@+id/addGuestsDivider1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:src="@drawable/ic_event_details_date_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/addGuestsDivider2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:src="@drawable/ic_event_details_date_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAddGuests"/>

        <ImageView
            android:id="@+id/substract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="69.02dp"
            android:src="@drawable/ic_substract"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addGuestsDivider1"
            app:layout_constraintBottom_toTopOf="@+id/addGuestsDivider2"/>


        <TextView
            android:id="@+id/textViewPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25.02dp"
            android:text="+"
            android:textSize="16sp"
            android:textColor="#A5D6A7"
            app:layout_constraintEnd_toStartOf="@+id/countTextView"
            app:layout_constraintTop_toBottomOf="@+id/addGuestsDivider1"
            app:layout_constraintBottom_toTopOf="@+id/addGuestsDivider2"/>

        <TextView
            android:id="@+id/countTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25.02dp"
            android:text="0"
            android:textSize="16sp"
            android:textColor="#A5D6A7"
            app:layout_constraintStart_toEndOf="@+id/substract"
            app:layout_constraintTop_toBottomOf="@+id/addGuestsDivider1"
            app:layout_constraintBottom_toTopOf="@+id/addGuestsDivider2"/>

        <ImageView
            android:id="@+id/guestIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3.98dp"
            android:src="@drawable/ic_guest_icon"
            app:layout_constraintStart_toEndOf="@+id/countTextView"
            app:layout_constraintTop_toBottomOf="@+id/addGuestsDivider1"
            app:layout_constraintBottom_toTopOf="@+id/addGuestsDivider2"/>

        <TextView
            android:id="@+id/textViewGuests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3.98dp"
            android:text="@string/guests"
            android:textSize="16sp"
            android:textColor="#DEFFFFFF"
            app:layout_constraintStart_toEndOf="@+id/guestIcon"
            app:layout_constraintTop_toBottomOf="@+id/addGuestsDivider1"
            app:layout_constraintBottom_toTopOf="@+id/addGuestsDivider2"/>

        <ImageView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25.02dp"
            android:src="@drawable/ic_add"
            app:layout_constraintStart_toEndOf="@+id/textViewGuests"
            app:layout_constraintTop_toBottomOf="@+id/addGuestsDivider1"
            app:layout_constraintBottom_toTopOf="@+id/addGuestsDivider2"/>

        <TextView
            android:id="@+id/textViewCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="137dp"
            android:text="@string/cancel"
            android:textSize="16sp"
            android:textColor="#90CAF9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addGuestsDivider2"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/textViewOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:text="@string/ok"
            android:textSize="16sp"
            android:textColor="#99FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/textViewCancel"
            app:layout_constraintTop_toBottomOf="@+id/addGuestsDivider2"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--<androidx.cardview.widget.CardView
        android:id="@+id/addGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



    </androidx.cardview.widget.CardView>-->

</androidx.cardview.widget.CardView>