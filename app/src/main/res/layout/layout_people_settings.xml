<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2F2F2F">

    <ImageView
        android:id="@+id/addContactIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19.98dp"
        android:layout_marginStart="16.98dp"
        android:src="@drawable/ic_add_person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvAddToContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to contact"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:padding="5dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="11.98dp"
        app:layout_constraintStart_toEndOf="@+id/addContactIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <view
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAddToContact" />

    <ImageView
        android:id="@+id/addGroupIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_add_to_group_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvAddToGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to group"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:padding="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="13dp"
        app:layout_constraintStart_toEndOf="@+id/addGroupIcon"
        app:layout_constraintTop_toBottomOf="@+id/divider"/>


    <ImageView
        android:id="@+id/addToGroupIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16.02dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_right_arrow_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>