                android:paddingRight="16dp" />
        </android.support.design.widget.TextInputLayout>-->


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/loginTextField"
            style="@style/TextInputLayoutAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="32dp"
            android:hint="UserName"
            android:textColorHint="#ffffff"
            app:boxBackgroundColor="#000000"
            app:boxStrokeColor="#34CBFE"
            app:hintTextColor="#34CBFE"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:inputType="text"
                android:maxLength="15"
                android:maxLines="1"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textCursorDrawable="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- <EditText
             android:id="@+id/loginEditText"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_marginLeft="32dp"
             android:layout_marginTop="24dp"
             android:layout_marginRight="32dp"
             android:background="@drawable/ic_edittext_background"
             android:hint="@string/user_name"
             android:inputType="textEmailAddress"
             android:maxLength="15"
             android:maxLines="1"
             android:paddingLeft="16dp"
             android:paddingRight="16dp"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/imageView" />-->

        <ImageView
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@drawable/ic_divider"
            app:layout_constraintLeft_toLeftOf="@+id/loginTextField"
            app:layout_constraintRight_toRightOf="@+id/loginTextField"
            app:layout_constraintTop_toBottomOf="@+id/loginTextField" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/ic_edittext_background"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:maxLength="15"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingEnd="58dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginTextField" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="@drawable/ic_divider"
            app:layout_constraintLeft_toLeftOf="@+id/passwordEditText"
            app:layout_constraintRight_toRightOf="@+id/passwordEditText"
            app:layout_constraintTop_toBottomOf="@+id/passwordEditText" />

        <ImageView
            android:id="@+id/passwordEyeIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_eye_off"
            app:layout_constraintBottom_toBottomOf="@+id/passwordEditText"
            app:layout_constraintEnd_toEndOf="@+id/passwordEditText"
            app:layout_constraintLeft_toRightOf="@+id/passwordEditText"
            app:layout_constraintRight_toRightOf="@+id/passwordEditText"
            app:layout_constraintTop_toTopOf="@+id/passwordEditText" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/stayLoggedIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="@string/stay_loggedin_in"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="@+id/createAccount"
            app:layout_constraintTop_toBottomOf="@+id/passwordEditText" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/stayLoggedInCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            app:layout_constraintBaseline_toBaselineOf="@+id/stayLoggedIn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/login"
            app:layout_constraintLeft_toRightOf="@+id/stayLoggedIn"
            app:layout_constraintRight_toRightOf="parent"
            app:useMaterialThemeColors="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createAccount"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="184dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="@string/create_account"
            android:textColor="#ffffff"
            app:cornerRadius="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/login"
            app:layout_constraintTop_toBottomOf="@+id/stayLoggedIn"
            app:strokeColor="#34CBFE" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/login"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="104dp"
            android:layout_height="48dp"
            android:backgroundTint="@drawable/ic_login_button_selector"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@drawable/ic_login_button_selector"
            android:textCursorDrawable="@color/white"
            app:cornerRadius="20dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/createAccount"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/createAccount"
            app:layout_constraintRight_toRightOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/forgot_your_password"
            android:textColor="#90CAF9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createAccount" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>