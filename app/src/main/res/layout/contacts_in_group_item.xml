<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_contact_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person"
        android:padding="10dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/txt_contact_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts Name"
        android:layout_toRightOf="@id/img_contact_list_item"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/ic_close_button"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
    <View
        android:id="@+id/view_seperator_contact_list_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/img_contact_list_item"
        android:layout_below="@id/img_contact_list_item"/>

    <!--<FrameLayout
        android:id="@+id/addToGroupFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>-->

</RelativeLayout>
