<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#1D2125"
    android:paddingLeft="16dp"
    >

    <ImageView
        android:id="@+id/img_followups_list_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_public_plan_tablayout"
        android:padding="10dp"
        android:layout_marginLeft="24dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/txt_followups_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New public plan"
        android:layout_toRightOf="@id/img_followups_list_item"
        android:layout_marginStart="9dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_centerVertical="true"/>

    <!--<ImageView
        android:id="@+id/img_followups_list_item_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_settings"
        android:padding="10dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>-->

    <View
        android:id="@+id/view_seperator_followups_list_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:layout_alignStart="@id/txt_followups_list_item"
        android:layout_below="@id/img_followups_list_item"/>

</RelativeLayout>