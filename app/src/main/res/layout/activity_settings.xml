<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D2125">
    <RelativeLayout
        android:id="@+id/rl_settings_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#1D2125">
        <ImageView
            android:id="@+id/img_settings_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:src="@drawable/ic_settings_close"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/txt_settings_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:layout_toRightOf="@id/img_settings_close"
            android:padding="10dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/view_seperator_account"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_below="@id/rl_settings_header"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings.Settings"
    android:background="#1D2125"
    android:layout_below="@id/view_seperator_account"
    android:layout_above="@+id/rl_settings_news_bottom"
    android:visibility="visible">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1D2125"
        android:paddingBottom="16dp">
        <RelativeLayout
            android:id="@+id/rl_settings_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1D2125"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <ImageView
                android:id="@+id/img_settings_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_settings_account_circle"
                />
            <TextView
                android:id="@+id/txt_settings_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account"
                android:layout_toRightOf="@+id/img_settings_account"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                />
            <View
                android:id="@+id/view_seperator_contacts"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBlack"
                android:layout_below="@id/txt_settings_account"
                android:layout_toRightOf="@id/img_settings_account"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_settings_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_settings_account"
            android:background="#1D2125"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <ImageView
                android:id="@+id/img_settings_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_settings_contacts"
                />
            <TextView
                android:id="@+id/txt_settings_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:layout_toRightOf="@id/img_settings_contacts"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                />
            <View
                android:id="@+id/view_seperator_followup"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBlack"
                android:layout_below="@id/txt_settings_contacts"
                android:layout_toRightOf="@id/img_settings_contacts"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_settings_followup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_settings_contacts"
            android:background="#1D2125"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <ImageView
                android:id="@+id/img_settings_followup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="4dp"
                android:paddingTop="12dp"
                android:paddingRight="10dp"
                android:src="@drawable/ic_settings_followup"
                />
            <TextView
                android:id="@+id/txt_settings_followup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/follow_ups"
                android:layout_toRightOf="@id/img_settings_followup"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="8dp"
                android:textAppearance="?android:textAppearanceMedium" />
            <View
                android:id="@+id/view_seperator_email"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:background="@color/colorBlack"
                android:layout_below="@id/txt_settings_followup"
                android:layout_toRightOf="@id/img_settings_followup"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_settings_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1D2125"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_below="@id/rl_settings_followup">
            <ImageView
                android:id="@+id/img_settings_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_settings_account_circle"
                />
            <TextView
                android:id="@+id/txt_settings_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:layout_toRightOf="@+id/img_settings_logout"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                />
            <View
                android:id="@+id/view_seperator_logout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorBlack"
                android:layout_below="@id/txt_settings_logout"
                android:layout_toRightOf="@id/img_settings_logout"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_settings_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_settings_logout"
            android:background="#1D2125"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <TextView
                android:id="@+id/img_settings_by_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:text="@string/by_email"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:src="@drawable/ic_settings_followup"
                />
            <Switch
                android:id="@+id/rb_settings_by_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </RelativeLayout>

       <!-- <RelativeLayout
            android:id="@+id/rl_settings_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_settings_email"
            android:background="#1D2125"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <View
                android:id="@+id/view_seperator_sms"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlack"/>
            <TextView
                android:id="@+id/img_settings_bysms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:text="By SMS"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:src="@drawable/ic_settings_followup"
