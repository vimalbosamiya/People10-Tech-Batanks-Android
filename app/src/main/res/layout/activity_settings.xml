                android:id="@+id/rb_settings_by_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </RelativeLayout>-->

        <RelativeLayout
            android:id="@+id/rl_settings_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_settings_email"
            android:background="#1D2125"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <View
                android:id="@+id/view_seperator_comments"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlack"/>
            <TextView
                android:id="@+id/img_settings_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:text="@string/comments"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:src="@drawable/ic_settings_followup"
                android:layout_below="@id/view_seperator_comments"
                />
            <Switch
                android:id="@+id/rb_settings_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_settings_invitations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_settings_comments"
            android:background="#1D2125"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <View
                android:id="@+id/view_seperator_invitations"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlack"/>
            <TextView
                android:id="@+id/img_settings_invitations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:text="@string/invitations"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:src="@drawable/ic_settings_followup"
                android:layout_below="@id/view_seperator_invitations"
                />
            <Switch
                android:id="@+id/rb_settings_invitations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_settings_public_plans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_settings_invitations"
            android:background="#1D2125"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <View
                android:id="@+id/view_seperator_pplans"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlack"/>
            <TextView
                android:id="@+id/img_settings_public_plans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:text="@string/public_plans"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:src="@drawable/ic_settings_followup"
                android:layout_below="@id/view_seperator_pplans"
                />
            <Switch
                android:id="@+id/rb_settings_public_plans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <View
                android:id="@+id/view_seperator_pplans_end"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorBlack"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tip_settings_language"
            style="@style/MaterialTextInputLayoutTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:hint="@string/language"
            android:textColorHint="#ffffff"
            app:boxBackgroundColor="#000000"
            app:boxStrokeColor="@color/text_input_layout_stroke_color"
            app:endIconMode="dropdown_menu"
            app:endIconTint="@color/colorWhite"
            app:helperText="@string/language_hint"
            app:helperTextEnabled="true"
            app:helperTextTextColor="#ffffff"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextColor="#34CBFE"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            android:layout_below="@id/rl_settings_public_plans">

            <AutoCompleteTextView
                android:id="@+id/input_settings_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:editable="false"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:gravity="center_vertical"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tip_settings_currency"
            style="@style/MaterialTextInputLayoutTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:hint="@string/currency"
            android:textColorHint="#ffffff"
            android:popupBackground="#2F2F2F"
            app:boxBackgroundColor="#000000"
            app:boxStrokeColor="@color/text_input_layout_stroke_color"
            app:endIconMode="dropdown_menu"
            app:endIconTint="@color/colorWhite"
            app:helperText="@string/currency_hint"
            app:helperTextEnabled="true"
            app:helperTextTextColor="#ffffff"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:hintTextColor="#34CBFE"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            android:layout_below="@id/tip_settings_language"
            app:startIconTint="#ffffff">

            <AutoCompleteTextView
                android:id="@+id/input_settings_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:popupBackground="#2F2F2F"
                android:textSize="15sp"
                android:editable="false"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:gravity="center_vertical"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>
</ScrollView>
    <RelativeLayout
        android:id="@+id/rl_settings_news_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_settings_news_bottom_bg"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/news"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginLeft="16dp"
            android:padding="16dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/loadHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_event_details_expand_less"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>
</RelativeLayout>