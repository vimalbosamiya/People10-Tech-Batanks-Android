<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#2F2F2F"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/rl_edit_groups_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_groups_edit_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_white"
        android:padding="10dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/txt_groups_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/img_groups_edit_icon"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_centerVertical="true"/>
    <View
        android:id="@+id/view_seperator_edit_groups"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/img_groups_edit_icon"
        android:layout_below="@id/img_groups_edit_icon"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_edit_groups_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_edit_groups_edit">

        <ImageView
            android:id="@+id/img_groups_delete_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_contact"
            android:padding="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_groups_delete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/img_groups_delete_icon"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_centerVertical="true"/>
        <View
            android:id="@+id/view_seperator_delete_groups"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlack"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/img_groups_delete_icon"
            android:layout_below="@id/img_groups_delete_icon"/>
    </RelativeLayout>
</RelativeLayout>
