<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/categoryIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="26.02dp"
        android:layout_marginStart="18.02dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="32dp"
        android:textSize="14sp"
        android:text="Professional"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="@+id/categoryIcon"
        app:layout_constraintBottom_toBottomOf="@+id/categoryIcon"
        app:layout_constraintStart_toEndOf="@+id/categoryIcon" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10.02dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="17.02dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="56dp"
        android:background="@color/colorBlack"
        app:layout_constraintStart_toStartOf="@+id/categoryName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryIcon"/>

</androidx.constraintlayout.widget.ConstraintLayout>