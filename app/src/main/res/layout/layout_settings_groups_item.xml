<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_groups_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_groups"
        android:padding="10dp"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/txt_groups_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contacts Name"
        android:padding="10dp"
        android:layout_toRightOf="@id/img_groups_list_item"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/img_groups_list_item_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_settings"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
    <View
        android:id="@+id/view_seperator_groups_list_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/img_groups_list_item"
        android:layout_below="@id/img_groups_list_item"/>

</RelativeLayout>
