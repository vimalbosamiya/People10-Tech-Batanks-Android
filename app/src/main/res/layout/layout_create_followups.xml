<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/rl_grey_curved">

    <TextView
        android:id="@+id/txt_create_followups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Follow Up"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textAppearance="?android:textAppearanceMedium" />
    <View
        android:id="@+id/view_seperator_create_followups_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_marginTop="24dp"
        android:layout_below="@id/txt_create_followups"/>
    <TextView
        android:id="@+id/txt_create_followups_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You will add to your follow-up list preferences of this research. Please name your tracked and save it"
        android:padding="16dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_below="@id/view_seperator_create_followups_title"
        android:textColor="@android:color/white"
        android:alpha="0.6"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tip_create_followups_name"
        style="@style/MaterialTextInputLayoutTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#ffffff"
        app:boxBackgroundColor="#000000"
        android:layout_margin="16dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        app:endIconMode="clear_text"
        app:endIconTint="@color/colorWhite"
        android:hint="Follow up name"
        app:helperText="Give a name to your follow up"
        app:helperTextTextColor="@android:color/white"
        app:boxStrokeColor="@color/text_input_layout_stroke_color"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true"
        app:hintTextColor="#34CBFE"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_below="@id/txt_create_followups_description">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_create_followups_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scrollbarTrackHorizontal="@color/colorWhite"
            android:textAppearance="?android:textAppearanceMedium"
            android:textCursorDrawable="@null" />
    </com.google.android.material.textfield.TextInputLayout>
    <View
        android:id="@+id/view_seperator_tip_create_followups_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:layout_marginTop="24dp"
        android:layout_below="@id/tip_create_followups_name"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_create_followups_ok"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:enabled="true"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="OK"
        android:textColor="@color/colorWhite"
        android:alpha="0.6"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_below="@id/view_seperator_tip_create_followups_name" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_create_followups_cancel"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:enabled="true"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="CANCEL"
        android:textColor="#90CAF9"
        android:layout_below="@id/view_seperator_tip_create_followups_name"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_toLeftOf="@id/btn_create_followups_ok"/>
</RelativeLayout>